
 <div class="col-md-6 col-md-offset-3">
  <% if params[:plan] == '2' %>
   <h1 class="text-center"> Pro Account </h1>
   <h4 class="text-center">Sign up for the pro account for 10$/month and get access to the community information!</h4>  
    <% else %>
    <h1 class="text-center">Basic Account </h1>
    <h4 class="text-center">Sign up for free and get basic access to this community</h4> 
    <% end%>
  </div>
<div class='row well col-md-4 col-md-offset-4'>
 
  <h2 class='text-center'>Sign up</h2>
  
  <% if params[:plan] == '2' %>
    <%= render "pro_form" %>
  <% else %>
    <%= render "basic_form" %>
  <% end %>


  <%= render "devise/shared/links" %>
</div>